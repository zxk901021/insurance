<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg" >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/change_password_back" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp">
        <include layout="@layout/back_btn_layout"/>
    </LinearLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_size"
        android:layout_alignTop="@id/change_password_back"
        android:layout_alignBottom="@id/change_password_back"
        android:gravity="center_vertical"/>
    
    <View 
        android:id="@+id/find2_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/yellow"
        android:layout_below="@id/change_password_back"
        android:layout_marginTop="10dp"/>
    
    
    <RelativeLayout 
        android:id="@+id/old_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/find2_view"
        android:background="@color/white_bg"
        android:layout_marginTop="20dp"
         android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        
        <TextView 
            android:id="@+id/change_password_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/old_password"
           android:textColor="@color/text_color"
           android:textSize="@dimen/activity_title_size"
           android:layout_centerVertical="true"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:ems="4"
           android:gravity="center_horizontal"
            />
        <ImageView 
            android:id="@+id/change_password_image1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/h_midline"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/change_password_text"/>
        <EditText 
            android:id="@+id/old_password_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/pass_hint"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/change_password_image1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/old_password_can_see"/>
    	<ImageView 
    	    android:id="@+id/old_password_can_see"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:src="@drawable/look"
    	    android:layout_margin="10dp"
    	   	android:layout_centerVertical="true"
    	   	android:layout_alignParentRight="true"
    	   	/>    
		
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/new_password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/old_password_layout"
        android:layout_alignRight="@id/old_password_layout"
        android:layout_below="@id/old_password_layout"
        android:background="@color/white_bg"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/new_password_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/new_password"
           android:textColor="@color/text_color"
           android:textSize="@dimen/activity_title_size"
           android:gravity="center_vertical|center_horizontal"
           android:layout_gravity="center_vertical"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="10dp"
           android:ems="4"
           android:layout_centerVertical="true"/>
        <ImageView 
            android:id="@+id/change_password_image2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/h_midline"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/new_password_text"
            />
        <EditText 
            android:id="@+id/new_password_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/pass_hint"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/change_password_image2"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/new_password_can_see"
            android:layout_toLeftOf="@+id/new_password_can_see"/>
    	    
		<ImageView 
		    android:id="@+id/new_password_can_see"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:src="@drawable/look"
    	    android:layout_margin="10dp"
    	   	android:layout_centerVertical="true"
    	   	android:layout_alignParentRight="true"/> 
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/ensure_new_password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/new_password_layout"
        android:layout_alignRight="@id/new_password_layout"
        android:layout_below="@id/new_password_layout"
        android:background="@color/white_bg"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/ensure_new_password_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/ensure_password"
           android:textColor="@color/text_color"
           android:textSize="@dimen/activity_title_size"
           android:gravity="center_vertical|center_horizontal"
           android:layout_gravity="center_vertical"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="10dp"
           android:ems="4"
           android:layout_centerVertical="true"/>
        <ImageView 
            android:id="@+id/ensure_change_password_image2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/h_midline"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/ensure_new_password_text"
            />
        <EditText 
            android:id="@+id/ensure_new_password_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/pass_hint"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/ensure_change_password_image2"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ensure_new_password_can_see"
            android:layout_toLeftOf="@+id/ensure_new_password_can_see"/>
    	    
		<ImageView 
		    android:id="@+id/ensure_new_password_can_see"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:src="@drawable/look"
    	    android:layout_margin="10dp"
    	   	android:layout_centerVertical="true"
    	   	android:layout_alignParentRight="true"/> 
    </RelativeLayout>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:id="@+id/change_password_submit_btn"
        android:text="@string/submit"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/activity_title_size"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@id/ensure_new_password_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_btn_shape"
        android:layout_alignLeft="@id/ensure_new_password_layout"
        android:layout_alignRight="@id/ensure_new_password_layout"
        android:padding="5dp"/>
    

</RelativeLayout>
