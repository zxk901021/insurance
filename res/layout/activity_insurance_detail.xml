<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    

    <RelativeLayout 
        android:id="@+id/insurance_detail_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg">
        <ImageView 
            android:id="@+id/insruance_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"/>
        <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insurance_detail_intro"
        android:textColor="@color/white"
        android:textSize="@dimen/large_medium_text_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
        <ImageView 
            android:id="@+id/collect_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        
        <TextView 
            android:id="@+id/collect_insurance_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/collect"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:layout_alignParentRight="true"
			android:gravity="center_vertical"
			android:paddingRight="10dp"
			android:paddingLeft="5dp"/>
    </RelativeLayout>
    
    <WebView 
        android:id="@+id/insurance_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/insurance_detail_title"
        android:layout_above="@+id/insurance_detail_bottom"/>
    
    
    
    
    
    <RelativeLayout 
        android:id="@+id/insurance_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        
        <TextView 
            android:id="@+id/insurance_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textSize="@dimen/small_middle_text_size"
            android:textColor="@color/yellow"/>
        
        <Button 
            android:id="@+id/insurance_buy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:textColor="#3399ff"
            android:textSize="@dimen/large_medium_text_size"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:layout_margin="2dp"/>
        
    </RelativeLayout>

</RelativeLayout>
