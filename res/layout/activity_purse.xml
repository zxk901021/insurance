<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    tools:context=".BoxActivity" >

    <RelativeLayout
        android:id="@+id/layout_category_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:src="@drawable/flight_title_back_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的钱包"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/medium_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_category_topbar"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/MineItemStyle"
            android:layout_marginTop="@dimen/item_margin_top"
            android:background="@drawable/bg_item_bottom" >

            <ImageView
                android:layout_width="26.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/android_personel_quickly_order" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="账户余额"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="2.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="2.0dip"
                android:text="￥100.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            style="@style/MineItemStyle"
            android:background="@drawable/bg_item_bottom" >

            <ImageView
                android:layout_width="26.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/android_my_jd_coupon" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="优惠券"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="2.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="2.0dip"
                android:text="2"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            style="@style/MineItemStyle"
            android:background="@drawable/bg_item_bottom"
            android:visibility="gone" >

            <ImageView
                android:layout_width="26.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/android_my_jd_assitant" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="京豆"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="2.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="2.0dip"
                android:text="500"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            style="@style/MineItemStyle"
            android:background="@drawable/bg_item_bottom" 
            android:visibility="gone">

            <ImageView
                android:layout_width="26.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/android_my_jd_wallet" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="京东卡/E卡"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingBottom="2.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="2.0dip"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            style="@style/MineItemStyle"
            android:layout_marginTop="@dimen/item_margin_top"
            android:background="@drawable/bg_item_bottom"
            android:visibility="gone" >

            <ImageView
                android:layout_width="26.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/android_my_jd_blank_note" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="京东白条"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/personel_arrow_right" />
        </LinearLayout>

        <LinearLayout
            style="@style/MineItemStyle"
            android:background="@drawable/bg_item_bottom"
            android:visibility="gone" >

            <ImageView
                android:layout_width="26.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/android_my_jd_wallet" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="小金库（支持转入转出）"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/personel_arrow_right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>