<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/dialog" >

        <TextView
            android:id="@+id/tv_gl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="确认退出京东客户端？"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dimgray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_gl_title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/item_margin_large"
            android:layout_marginRight="@dimen/item_margin_large"
            android:background="#d7d7d7" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="@dimen/item_margin_large"
            android:background="@drawable/btn_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/large_medium_text_size"
            android:text="取消" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_alignBaseline="@+id/btn_cancel"
            android:layout_alignBottom="@+id/btn_cancel"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_margin_large"
            android:background="@drawable/btn_cancel"
            android:textSize="@dimen/large_medium_text_size"
            android:text="确定" />

    </RelativeLayout>

</RelativeLayout>
