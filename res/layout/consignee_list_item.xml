<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/consignee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人姓名：张三"
        android:layout_margin="10dp"/>
    <TextView 
        android:id="@+id/consignee_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话：124245123"
        android:layout_below="@+id/consignee_name"
        android:layout_marginLeft="10dp"/>
    <TextView 
        android:id="@+id/consignee_address"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细地址"
        android:layout_below="@+id/consignee_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    
    
    <TextView 
        android:id="@+id/consignee_email"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consignee_address"
        android:text="电子邮件地址"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/personel_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
    

</RelativeLayout>
