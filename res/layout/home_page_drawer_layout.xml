<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Android Developer"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Hello World!"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/android_my_jd_account_center"
        android:drawablePadding="25dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="首页" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/android_my_jd_appoint"
        android:drawablePadding="25dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="发现" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/android_my_jd_collects"
        android:drawablePadding="25dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="关注" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/android_my_jd_discuss"
        android:drawablePadding="25dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="收藏" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/android_my_jd_history"
        android:drawablePadding="25dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="草稿" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/android_my_jd_game_center"
        android:drawablePadding="25dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="提问" />

</LinearLayout>