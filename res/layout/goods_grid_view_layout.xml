<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    
    <ImageView 
        android:id="@+id/goods_grid_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/xiaoshidai"/>

    <TextView 
        android:id="@+id/goods_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:text="思亲肤绿茶泡沫洁面摩丝160ml"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:layout_below="@id/goods_grid_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"/>
    
    <TextView 
        android:id="@+id/goods_grid_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="￥ 65.00"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/goods_grid_name"
        android:layout_marginTop="2dp"/>
    
</RelativeLayout>
