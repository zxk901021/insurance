<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_middle"
        android:background="@drawable/purple" />

    <TextView
        android:id="@+id/tv_recom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:text="老有所依"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="@dimen/small_middle_text_size" />
    
    <TextView 
        android:id="@+id/home_page_newest_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_recom"
        android:layout_alignTop="@id/tv_recom"
        android:textColor="@color/black"
        android:textSize="@dimen/small_middle_text_size"
        android:text="更多"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"/>
    <LinearLayout 
        android:id="@+id/home_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_page_newest_more"
        android:padding="6dp">
        
        <ImageView 
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            
            android:src="@drawable/laonian"/>
        <TextView 
            android:id="@+id/old_tv1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="老年人意外险选太平_每天不足1元钱"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_weight="3"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/old_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_old"
        android:padding="6dp">
        
        <ImageView 
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            
            android:src="@drawable/laonian2"/>
        <TextView 
            android:id="@+id/old_tv2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="平安老年人综合保险
综合保障更多，360度的孝心"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_weight="3"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_recom"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layout_recom"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zhidemai" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/worth_to_buy" />

                <TextView
                    android:id="@+id/tv_recom_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="值得买"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_middle_text_size" />

                <TextView
                    android:id="@+id/tv_recom_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView4"
                    android:layout_below="@+id/tv_recom_title"
                    android:text="单兵履带坦克"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/small_text_size" />

            </RelativeLayout>
            
            <View 
                android:layout_width="@dimen/divider_height_middle"
                android:layout_height="match_parent"
                android:background="@drawable/hintColor"/>

            <RelativeLayout
                android:id="@+id/layout_recom2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/jingxuantuijian" />

                <TextView
                    android:id="@+id/tv_recom_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_recom_title2"
                    android:layout_below="@+id/tv_recom_title2"
                    android:text="小锤子抢先曝"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/dark" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/goods_recom" />

                <TextView
                    android:id="@+id/tv_recom_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="精选推荐"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_middle_text_size" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/recom_devider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_middle"
            android:background="@drawable/purple" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layout_recom3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_item_margin" >

                <TextView
                    android:id="@+id/tv_recom_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:includeFontPadding="false"
                    android:background="@drawable/text_bg_round_red"
                    android:text="闪"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/small_middle_text_size"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/shangou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_recom_title3"
                    android:layout_alignBottom="@+id/tv_recom_title3"
                    android:layout_toRightOf="@+id/tv_recom_title3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/small_middle_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="购" />

                <TextView
                    android:id="@+id/tv_recom_subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_recom_title3"
                    android:layout_below="@+id/tv_recom_title3"
                    android:text="开春拍新款"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/dark" />

            </RelativeLayout>
            
            <View 
                android:layout_width="@dimen/divider_height_middle"
                android:layout_height="match_parent"
                android:background="@drawable/hintColor"/>

            <RelativeLayout
                android:id="@+id/layout_recom4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_item_margin" >

                <TextView
                    android:id="@+id/tv_recom_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:includeFontPadding="false"
                    android:background="@drawable/text_bg_round_green"
                    android:text="团"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/small_middle_text_size"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tuangou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_recom_title4"
                    android:layout_alignBottom="@+id/tv_recom_title4"
                    android:layout_toRightOf="@+id/tv_recom_title4"
                    android:text="购"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/small_middle_text_size" />

                <TextView
                    android:id="@+id/tv_recom_subtitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_recom_title4"
                    android:layout_below="@+id/tv_recom_title4"
                    android:text="爆款抄底价"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/dark" />

            </RelativeLayout>
            
            <View 
                android:layout_width="@dimen/divider_height_middle"
                android:layout_height="match_parent"
                android:background="@drawable/hintColor"/>

            <RelativeLayout
                android:id="@+id/layout_recom5"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_item_margin" >

                <TextView
                    android:id="@+id/tv_recom_title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:includeFontPadding="false"
                    android:background="@drawable/text_bg_round_yellow"
                    android:text="京"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/small_middle_text_size"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/jdzhongchou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_recom_title5"
                    android:layout_alignBottom="@+id/tv_recom_title5"
                    android:layout_toRightOf="@+id/tv_recom_title5"
                    android:text="东众筹"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/small_middle_text_size" />

                <TextView
                    android:id="@+id/tv_recom_subtitle5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_recom_title5"
                    android:layout_below="@+id/tv_recom_title5"
                    android:text="499八核手机"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/dark" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/recom_devider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_middle"
            android:layout_marginBottom="@dimen/home_item_margin"
            android:background="@drawable/purple" />

        <HorizontalScrollView
            android:id="@+id/layout_recom_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/img_banner6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_home_banner6" />

                <ImageView
                    android:id="@+id/img_banner7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_home_banner7" />

            </LinearLayout>

        </HorizontalScrollView>
        
        <View
            android:id="@+id/recom_devider3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_middle"
            android:layout_marginTop="@dimen/home_item_margin"
            android:background="@drawable/purple" />
    </LinearLayout>
    
    <com.zhy_9.shopping_mall.widget.InternalGridView 
        android:id="@+id/home_page_newest_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:layout_below="@+id/tv_recom"
        android:layout_marginTop="10dp"
        android:listSelector="#00000000"
        android:background="#ebeced"
        android:padding="5dp">
        
    </com.zhy_9.shopping_mall.widget.InternalGridView>

</RelativeLayout>