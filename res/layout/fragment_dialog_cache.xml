<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/dialog" >

        <TextView
            android:id="@+id/tv_gl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/large_medium_text_size"
            android:text="清除缓存"
            android:textColor="@color/dimgray"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View 
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_gl_title"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="@dimen/item_margin_large"
            android:layout_marginRight="@dimen/item_margin_large"
            android:background="#d7d7d7"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_alignLeft="@+id/divider"
            android:layout_alignRight="@+id/divider"
            android:layout_marginTop="@dimen/item_margin_large"
            android:lines="2"
            android:text="删除缓存的图片（不会删除个人信息和设置）"
            android:textColor="@color/dimgray"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/small_middle_text_size" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_ok"
            android:textColor="@color/white"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_cancel"
            android:text="取消" />

    </RelativeLayout>

</RelativeLayout>
